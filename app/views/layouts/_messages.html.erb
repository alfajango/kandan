<!-- Rails flash messages styled for Bootstrap -->
<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <div class="alert alert-<%=name == :notice ? "success" : "danger"%> fade in" >
      <%=content_tag(:button, 'x', class: "close", data: { dismiss: 'alert' })%>
      <%= msg %>
    </div>
  <% end %>
<% end %>
